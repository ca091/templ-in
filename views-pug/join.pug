extends ./common/layout
block header
    style.
        body{
            margin: 0;
            background-image:
                    linear-gradient(45deg, #ebebeb 25%, transparent 25%),
                    linear-gradient(-45deg, #ebebeb 25%, transparent 25%),
                    linear-gradient(45deg, transparent 75%, #ebebeb 75%),
                    linear-gradient(-45deg, transparent 75%, #ebebeb 75%);
            background-size: 20px 20px;
            background-position: 0 0, 0 10px, 10px -10px, -10px 0;
        }
        img {
            mask-image: url(https://s3-us-west-2.amazonaws.com/s.cdpn.io/851550/spongebob.gif);
            mask-size: contain;
            mask-repeat: no-repeat;
            -webkit-mask-image: url(https://s3-us-west-2.amazonaws.com/s.cdpn.io/851550/spongebob.gif);
            -webkit-mask-size: contain;
            -webkit-mask-repeat: no-repeat;
            max-width: 100%;
        }
block content
    main
        img(src='https://s3-us-west-2.amazonaws.com/s.cdpn.io/851550/sponge.jpg')